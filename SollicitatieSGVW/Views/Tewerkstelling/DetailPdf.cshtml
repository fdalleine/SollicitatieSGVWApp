@model TewerkstellingsRecordDetailViewModel

@{ ViewBag.Title = "Details tewerkstelling";}

@{ Layout = null;}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<div class="col-md-12 grid-margin grid-margin-md-0">
    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Lijst tewerkstellingen</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Detail tewerkstelling</li>
                </ol>
            </nav><br /><br />
            <div class="wrap align-items-center ml-5">
                <p class="font-weight-bold text-success" style="font-size: 20px">@Model.VolledigeNaam</p>
                <br /><br />
                <p class="font-weight-bold">Tewerkstelling</p>
                <hr style="background-color: crimson" />
                <p class="font-weight-normal">School: @Model.SchoolId</p>
                <p class="font-weight-normal">Startdatum: @Model.StartDatum.ToString("dd/MM/yyyy")</p>
                <p class="font-weight-normal">Einddatum: @Model.Einddatum.ToString("dd/MM/yyyy")</p>
                <br /><br />
                @*<p class="font-weight-bold">Opmerkingen</p>
                <hr style="background-color: crimson" />
                <p class="font-weight-normal">@Model.Opmerking</p>
                <br /><br />*@
            </div>
        </div>
    </div>
</div>
