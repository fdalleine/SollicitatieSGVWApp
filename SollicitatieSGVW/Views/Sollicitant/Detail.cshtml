@model SollicitantDetailViewModel

<div class="col-md-12 grid-margin grid-margin-md-0">
    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Lijst Sollicitanten</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Detail sollicitant</li>
                </ol>
            </nav><br /><br />
                        <div class="wrap align-items-center ml-5">
                            <p class="font-weight-bold text-success" style="font-size: 20px">@Model.VolledigeNaam</p>
                            <br /><br />
                            <p class="font-weight-bold">Algemene gegevens</p>
                            <hr style="background-color: crimson" />
                            <p class="font-weight-normal">Sollicitantnummer: @Model.SollicitantNr</p>
                            <p class="font-weight-normal">Rijksregisternummer: @Model.RijksregisterNr</p>
                            <p class="font-weight-normal">Geboortedatum: @Model.GeboorteDatum.ToString("dd/MM/yyyy")</p>
                            <p class="font-weight-normal">Adres: @Model.Adres, @Model.PostCode @Model.WoonPlaats</p>
                            <p class="font-weight-normal">Email: <a href="#">@Model.Email</a></p>
                            <p class="font-weight-normal">Telefoon: <a href="tel:@Model.TelefoonNr">@Model.TelefoonNr</a></p>
                            <br /><br />
                            <p class="font-weight-bold">Diploma & vakken</p>
                            <hr style="background-color: crimson" />
                            <p class="font-weight-normal">Diploma: @Model.Dilpoma</p>
                            <p class="font-weight-normal">Vakken: @Model.VereisteVakken</p>
                            <p class="font-weight-normal">Vrij vanaf: @Model.DatumVrij.ToString("dd/MM/yyyy")</p>
                            <p class="font-weight-normal">Motivatie: @Model.Motivatie</p>
                            <br /><br />
                            <p class="font-weight-bold">Tewerkstelling</p>
                            <hr style="background-color: crimson" />
                            <p class="font-weight-normal"><i class="fas fa-envelope" style="margin-right:0.6em; color:cornflowerblue"></i><a href="mailto:@Model.Email?subject=Tewerkstelling Scholengemeenschap SGVW&body=In bijlage vind je een voorstel die we jou doen ivm een tewerkstelling binnen onze scholengemeenschap.">Mail voorstel tewerkstelling</a></p>
                            <br /><br />
                        </div>
        </div>
    </div>
</div>
