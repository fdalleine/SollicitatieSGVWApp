<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SollicitatieSGVW</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css"/>
</head>
<body>
   <div class="container-scroller">
       <nav class="navbar col-lg-12 col-12 p-0 fixed-top d-flex fles-row">
           <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
               <a class="navbar-brand brand-logo"><img src="~/images/Talent-is.jpg" alt="logo"/></a>
           </div>
           <div class="navbar-menu-wrapper d-flex align-items-center justify-content-end">
               <partial name="_LoginPartial"/>
           </div>
       </nav>
       <div class="container-fluid page-body-wrapper">
           <nav class="sidebar sidebar-offcanvas" id="sidebar">
               <ul class="nav">
                   <li class="nav-item">
                       <a class="nav-link" asp-controller="Home" asp-action="Index" aria-controls="ui-basic">
                           <i class="fas fa-home text-primary" style="margin-right:0.7em"></i>
                           <span class="menu-title">Home</span>
                       </a>
                   </li>

                   <li class="nav-item">
                       <a class="nav-link" data-toggle="collapse" href="#Sollicitant" aria-expanded="false" aria-controls="ui-basic">
                           <i class="fas fa-users fa-lg text-primary" style="margin-right:0.7em"></i>
                           <span class="menu-title">Sollicitant</span>
                           <i class="menu-arrow text-primary"></i>
                       </a>
                       <div class="collapse" id="Sollicitant">
                           <ul class="nav flex-column sub-menu">
                               <li class="nav-item"><a class="nav-link" asp-controller="Sollicitant" asp-action="Create"> Nieuwe sollicitant</a></li>
                               <li class="nav-item"><a class="nav-link" asp-controller="Sollicitant" asp-action="Index"> Alle sollicitanten</a></li>
                           </ul>
                       </div>
                   </li>

                   <li class="nav-item">
                       <a class="nav-link" data-toggle="collapse" href="#Tewerkstelling" aria-expanded="false" aria-controls="ui-basic">
                           <i class="fas fa-sticky-note fa-lg text-primary" style="margin-right:0.7em"></i>
                           <span class="menu-title">Tewerkstelling</span>
                           <i class="menu-arrow text-primary"></i>
                       </a>
                       <div class="collapse" id="Tewerkstelling">
                           <ul class="nav flex-column sub-menu">
                               <li class="nav-item"><a class="nav-link" asp-controller="Tewerkstelling" asp-action="Create"> Nieuwe tewerkstelling</a></li>
                               <li class="nav-item"><a class="nav-link" asp-controller="Tewerkstelling" asp-action="Index"> Tewerkstellingen</a></li>
                           </ul>
                       </div>
                   </li>
               </ul>
           </nav>
           <div class="main-panel">
               <partial name="_CookieConsentPartial"/>
               <div class="content-wrapper">
                   @RenderBody()
               </div>
               <footer class="footer">
                   <p> &copy; @DateTime.UtcNow.Year - Sollicitaties SGVW - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></p>
               </footer>
           </div>
       </div>
   </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
